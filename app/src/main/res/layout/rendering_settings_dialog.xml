<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <CheckBox
            android:id="@+id/checkDrawFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/draw_frame" />

        <CheckBox
            android:id="@+id/checkDrawBorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/draw_border" />

        <CheckBox
            android:id="@+id/checkDrawModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/draw_model" />

        <CheckBox
            android:id="@+id/checkOpenGL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opengl_renderer"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="325dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>